---
title: <%= defined?(@title) ? @title : "Remote Desktop - Generic" %>
cluster: "academic"
attributes:
  desktop: "myxfce"
  semester: <%= defined?(@semester) ? @semester : 'FALL2021' %>
  course: <%= defined?(@course) ? @course : 'fasrc-general' %>
  bc_vnc_idle: 0
  node_type: null
  bc_num_slots: null
  bc_vnc_resolution:
    value: "1024x768"
    required: true
  bc_account: null
  custom_time:
    label: "Allocated Time (expressed in MM , or HH:MM:SS , or DD-HH:MM)."
    value: "<%= defined?(@custom_time) ? @custom_time : '04:00:00' %>"
    widget: text_field
  bc_queue: "academic"
  bc_num_hours: null
  custom_email_address:
    label: email for status notification
    widget: text_field
  <% if defined?(@custom_memory_per_node_select) && @custom_memory_per_node_select %>
  custom_memory_per_node:
    label: Memory Allocation in GB
    value: <%= defined?(@custom_memory_per_node) ? @custom_memory_per_node : 4 %>
    min: <%= defined?(@custom_memory_per_node_min) ? @custom_memory_per_node_min : 4 %>
    step: 1
    max: <%= defined?(@custom_memory_per_node_max) ? @custom_memory_per_node_max : 252 %>
    widget: number_field
  <% else %>
  custom_memory_per_node: <%= defined?(@custom_memory_per_node) ? @custom_memory_per_node : 8 %>
  <% end %>
  <% if defined?(@custom_num_cores_select) && @custom_num_cores_select %>
  custom_num_cores:
    label: Number of cores
    value: <%= defined?(@custom_num_cores) ? @custom_num_cores : 1 %>
    min: <%= defined?(@custom_num_cores_min) ? @custom_num_cores_min : 1 %>
    step: 1
    max: <%= defined?(@custom_num_cores_max) ? @custom_num_cores_max : 64 %>
    widget: number_field
    help: "Number of Cpus per task"
  <% else %>
  custom_num_cores: <%= defined?(@custom_num_cores) ? @custom_num_cores : 2 %>
  <% end %>
  <% if defined?(@custom_num_tasks_select) && @custom_num_tasks_select %>
  custom_num_tasks:
    label: Number of mpi tasks
    value: <%= defined?(@custom_num_tasks) ? @custom_num_tasks : 1 %>
    min: <%= defined?(@custom_num_tasks_min) ? @custom_num_tasks_min : 1 %>
    step: 1
    max: <%= defined?(@custom_num_tasks_max) ? @custom_num_tasks_max : 64 %>
    help: "Number of mpi tasks. If you don't know what this means leave it at 1"
  <% else %>
  custom_num_tasks: <%= defined?(@custom_num_tasks) ? @custom_num_tasks : 1 %>
  <% end %>
  custom_num_gpus: <%= defined?(@custom_num_gpus) ? @custom_num_gpus : 0 %>
  custom_reservation: null
  custom_desktop:
    label: "Custom Desktop Folder"
    widget: check_box
    value: 1
    help: |
          **_Checking this box will create a desktop folder unique to this job_**
  centos_version: <%= defined?(@remote_desktop_version) ? @remote_desktop_version : '' %>
  use_intel: <%= defined?(@use_intel) ? @use_intel : false %>
  use_abaqus: <%= defined?(@use_abaqus) ? @use_abaqus : false %>
  use_matlab: <%= defined?(@use_matlab) ? @use_matlab : false %>
  use_comsol: <%= defined?(@use_comsol) ? @use_comsol : false %>
  use_lumerical: <%= defined?(@use_lumerical) ? @use_lumerical : false %>
  intel_version: <%= defined?(@intel_version) ? @intel_version : 'intel/21.2.0-fasrc01' %>
  abaqus_version: <%= defined?(@abaqus_version) ? @abaqus_version : 'abaqus-2019.sqs' %>
  matlab_version: <%= defined?(@matlab_version) ? @matlab_version : 'matlab/R2021a-fasrc01' %>
  comsol_version: <%= defined?(@matlab_version) ? @comsol_version : 'comsol-teaching/5.6-fasrc01' %>
  lumerical_version: <%= defined?(@lumerical_version) ? @lumerical_version : 'lumerical-teaching/2021R2_R2_7bf43e7149-fasrc01' %>
  vscode_version: <%= defined?(@vscode_version) ? @vscode_version : 'vscode/1.49-fasrc01' %>
  git_version: <%= defined?(@git_version) ? @git_version : 'git/2.17.0-fasrc01' %>

form:
  - bc_vnc_idle
  - desktop
  - semester
  - course
  - bc_vnc_resolution
  - bc_num_slots
  - node_type
  - bc_queue
  - custom_memory_per_node
  - custom_num_cores
  - custom_num_tasks
  - custom_num_gpus
  - bc_num_hours
  - custom_time
  - custom_desktop
  - custom_reservation
  - bc_account
  - centos_version
  - use_intel
  - use_abaqus
  - use_matlab
  - use_comsol
  - use_lumerical
  - intel_version
  - abaqus_version
  - matlab_version
  - comsol_version
  - lumerical_version
  - vscode_version
  - git_version
